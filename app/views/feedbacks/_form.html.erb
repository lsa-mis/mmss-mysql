<%= form_with(model: feedback, local: true, data: { controller: "required-stars" }) do |form| %>
  <% if feedback.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(feedback.errors.count, "error") %> prohibited this feedback from being saved:</h2>
      <ul>
        <% feedback.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :genre %>
    <%= form.select :genre, ([["Error on Page","page_error"],["Layout Issue","layout_issue"],["Suggestion","suggestion"]]), include_blank: true, required: true %>
  </div>

  <div class="field" data-controller="character-counter" data-character-counter-max-value="<%= Feedback::MESSAGE_MAX_LENGTH %>">
    <%= form.label :message %>
    <%= form.text_area :message, size: "24x6", maxlength: Feedback::MESSAGE_MAX_LENGTH, data: { character_counter_target: "input" } %>
    <div class="form-text text-muted" data-character-counter-target="counter" aria-live="polite">0 / <%= Feedback::MESSAGE_MAX_LENGTH %> characters</div>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>